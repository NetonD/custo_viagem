<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_marginHorizontal="32sp"
        android:layout_marginBottom="0sp"
        android:layout_marginTop="16sp"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/distancia" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_de_km"
        android:gravity="center"/>

    <EditText
        android:layout_marginHorizontal="32sp"
        android:layout_marginBottom="0sp"
        android:layout_marginTop="16sp"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preco" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preco_por_litro"
        android:gravity="center"/>
    <EditText
        android:layout_marginHorizontal="32sp"
        android:layout_marginBottom="0sp"
        android:layout_marginTop="16sp"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/autonomia" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kms_por_litro"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/gasto_sera_de"
        android:gravity="center"
        android:layout_marginTop="64sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:gravity="center"
        android:text="R$ 0"
        android:textSize="32sp"
        android:textStyle="bold" />
    <Button
        android:layout_width="256sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:text="@string/calcular"
        android:layout_gravity="center"/>
</LinearLayout>